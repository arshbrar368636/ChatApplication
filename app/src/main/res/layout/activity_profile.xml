<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#A5F8E4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME TO PROFILE"
            android:textSize="40dp"
            android:textColor="#5a98ec"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="#A5F8E4">


        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5a98ec"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5a98ec"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5a98ec"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewUserCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5a98ec"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewUserGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5a98ec"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewUserProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5a98ec"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/buttonLogout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="460dp"
            android:background="#5a98ec"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show profile"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="47dp"
            android:textColor="#5a98ec"
            android:textStyle="bold"
            android:id="@+id/text_view_new"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Map"
            android:id="@+id/buttonMap"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:background="#5a98ec"/>
    </LinearLayout>


</RelativeLayout>